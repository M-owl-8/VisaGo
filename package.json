{
  "name": "visabuddy-monorepo",
  "version": "1.0.0",
  "description": "VisaBuddy - AI-Powered Visa Application Management System",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/ai-service",
    "apps/web"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:backend": "npm run dev -w apps/backend",
    "dev:ai": "cd apps/ai-service && python -m uvicorn main:app --reload --port 8001",
    "build": "npm run build --workspaces",
    "build:backend": "cd apps/backend && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:all": "npm run build:backend && npm run build:web",
    "test": "npm run test --workspaces",
    "test:checklist": "jest --runInBand --config apps/backend/jest.config.js --testPathPattern=checklist",
    "install-all": "npm install && npm run install-all --workspaces",
    "setup:husky": "husky install",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "db:generate": "cd apps/backend && npm run db:generate",
    "db:migrate:deploy": "cd apps/backend && npm run db:migrate:deploy"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@ioredis/commands": "^1.5.0",
    "@types/ws": "^8.18.1",
    "ioredis": "^5.8.2",
    "next": "^14.2.35",
    "ws": "^8.18.3"
  },
  "overrides": {
    "@next/swc-darwin-arm64": "14.2.34",
    "@next/swc-darwin-x64": "14.2.34",
    "@next/swc-linux-arm64-gnu": "14.2.34",
    "@next/swc-linux-arm64-musl": "14.2.34",
    "@next/swc-linux-x64-gnu": "14.2.34",
    "@next/swc-linux-x64-musl": "14.2.34",
    "@next/swc-win32-arm64-msvc": "14.2.34",
    "@next/swc-win32-ia32-msvc": "14.2.34",
    "@next/swc-win32-x64-msvc": "14.2.34"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  }
}
