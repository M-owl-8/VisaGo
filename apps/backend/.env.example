# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/visabuddy_dev

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_PRIVATE_KEY=your_private_key_json

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Payment Gateway Configuration
PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_API_KEY=your_payme_api_key
PAYME_API_URL=https://checkout.test.payme.uz # Use https://checkout.payme.uz for production

UZUM_MERCHANT_ID=your_uzum_merchant_id
UZUM_API_URL=https://api.uzum.uz

CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SERVICE_ID=your_click_service_id
CLICK_API_URL=https://api.click.uz

STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=noreply@visabuddy.com

# File Storage Configuration
STORAGE_TYPE=firebase # firebase or s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=visabuddy-uploads

# Logging Configuration
LOG_LEVEL=info # error, warn, info, debug

# API Documentation
SWAGGER_ENABLED=true
API_DOCS_URL=/api/docs

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_PAYMENTS=true # Enabled in Phase 2
ENABLE_ADMIN_PANEL=false # Enable in Phase 3