{
  "$schema": "https://railway.app/schema.json",
  "services": {
    "backend": {
      "name": "VisaBuddy Backend",
      "image": "railway:latest",
      "context": "./apps/backend",
      "dockerfile": "./Dockerfile",
      "port": 3000,
      "replicas": 1,
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "LOG_LEVEL": "info"
      }
    },
    "ai-service": {
      "name": "VisaBuddy AI Service",
      "image": "railway:latest",
      "context": "./apps/ai-service",
      "dockerfile": "./Dockerfile",
      "port": 8001,
      "replicas": 1,
      "variables": {
        "PORT": "8001",
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "INFO"
      }
    }
  },
  "plugins": [
    {
      "source": "https://github.com/railwayapp/plugin-postgres"
    },
    {
      "source": "https://github.com/railwayapp/plugin-redis"
    }
  ]
}